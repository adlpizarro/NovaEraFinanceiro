<UserControl x:Class="Incipiens.Modulos.Cliente.Wpf.botoes.btnCliente"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Incipiens.Modulos.Cliente.Wpf.botoes"
             mc:Ignorable="d" 
            Style="{StaticResource UserControlBackGroundMenu}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Incipiens.Base.Wpf.Temas;component/dicRecursos.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Button Margin="0,3,0,0" Style="{StaticResource btnMenu}" x:Name="botao">
            <DockPanel>
                <Label DockPanel.Dock="Bottom" Content="Clientes" x:Name="lbl" Style="{StaticResource lblMenu}"/>
                <Image Source="/Incipiens.Modulos.Cliente.Wpf;component/Resources/cliente.png" />

            </DockPanel>
        </Button>
    </Grid>
</UserControl>
